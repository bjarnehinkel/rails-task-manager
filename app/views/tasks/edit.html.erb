<h1>Edit <%= @task.title %></h1>
<form action="/tasks/<%= @task.id %>" method="post">
  <%= hidden_field_tag "_method", :patch %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="title">Title:</label>
  <input type="text" name="task[title]" value="<%= @task.title %>">
  <label for="details">Task Details:</label>
  <textarea name="task[details]" cols="30" rows="10"><%= @task.details %></textarea>
  <label for="completed">Done?</label>
  <input type="checkbox" name="task[completed]">
  <input type="submit">
</form>
<%= link_to "Back", task_path %>
